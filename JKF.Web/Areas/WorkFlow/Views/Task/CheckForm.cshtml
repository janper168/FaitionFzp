            }

    .inputTextShow {
        position: absolute;
    }

    .textAreaShow {
        position: absolute;
    }

    .dateTimeShow {
        position: absolute;
    }

    .selectorShow {
        position: absolute;
    }
    .filesShow{
        position: absolute;
